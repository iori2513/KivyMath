ImageWidget:

<ImageWidget>:
    canvas.before:
        Color:
            rgba: 0.7, 0.7, 0.6, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        size: root.size

        Label:
            id: direction
            text: root.source

        BoxLayout:
            size_hint_y: 0.2

            Button:
                id: button1
                text: '解答を見る'
                on_press: root.answer()
            Button:
                id: button2
                text: '次の問題へ'
                on_press: root.new_direction()
            Button:
                id: button3
                text: '問題に戻る'
                on_press: root.go_back()





